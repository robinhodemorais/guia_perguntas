<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.title %> </h1> 
        <p><%= pergunta.description %> </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responta</h3>
            <label for="">Resposta</label>
            <textarea placeholder="Digite sua resposta" name="corpo" class="form-control"></textarea>
            <br>    
            <input type="text" name="pergunta" value="<%= pergunta.id %> " hidden>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %> 
    </div>
</body>
<%- include('./partials/footer.ejs') %>
