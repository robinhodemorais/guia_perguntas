<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Perguntas</title>
    <!--não precisa colocar a pasta public porque automaticamente o ejs procura na public-->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <img src="/img/download.jpg">
    <h1>Guia Perguntas</h1>
    
    <p>Nome: <%= nome %> </p>
    <p>Linguagem: <%= lang %></p> 
    <p>Empresa: <%= empresa %></p>
    <p>Inscritos: <%= inscritos %> </p>

    <% if(msg == true){ %>
        <h3>Isso é uma mensagem de erro!</h3>
    <% } else {%>
        <h3>Nenhum erro!</h3>
    <% }%>

    <% produtos.forEach(function (produto) { %>
        <hr>
       <h3><%= produto.nome %></h3>
       <h4><%= produto.preco %></h4>
    <% })%>

   
</body>
</html>